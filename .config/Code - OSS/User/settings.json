{
  "editor.fontFamily": "'Iosevka nf', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
  "editor.fontLigatures": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  "workbench.colorTheme": "Dracula",
  "keyboard.dispatch": "keyCode",
  "editor.formatOnSave": true,
  "vim.leader": " ",
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "w"],
      "commands": ["workbench.action.files.save"]
    },
    {
      "before": ["K"],
      "commands": ["editor.action.showHover"]
    },
    {
      "before": [">"],
      "after": [">", ">"]
    },
    {
      "before": ["<"],
      "after": ["<", "<"]
    },
    {
      "before": ["<leader>", "f"],
      "commands": ["revealInExplorer"]
    },
    {
      "before": ["<leader>", ","],
      "commands": [":noh"]
    },
    {
      "before": ["]", "d"],
      "commands": ["editor.action.marker.next"]
    },
    {
      "before": ["[", "d"],
      "commands": ["editor.action.marker.prev"]
    },
    {
      "before": ["]", "D"],
      "commands": ["editor.action.marker.nextInFiles"]
    },
    {
      "before": ["[", "D"],
      "commands": ["editor.action.marker.prevInFiles"]
    },
    {
      "before": ["g", "n"],
      "commands": ["editor.action.smartSelect.expand"]
    }
  ],

  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["g", "n"],
      "commands": ["editor.action.smartSelect.expand"]
    },
    {
      "before": ["g", "r"],
      "commands": ["editor.action.smartSelect.shrink"]
    }
  ],

  "vim.autoSwitchInputMethod.obtainIMCmd": "/usr/bin/xkb-switch",
  "vim.autoSwitchInputMethod.switchIMCmd": "/usr/bin/xkb-switch -s {im}",
  "vim.autoSwitchInputMethod.defaultIM": "us",
  "vim.autoSwitchInputMethod.enable": true,
  "vim.highlightedyank.enable": true,
  "vim.hlsearch": true,
  "vim.smartRelativeLine": true,
  "vim.visualstar": true,
  "vim.foldfix": true,
  // "vim.handleKeys": {
  //   "<C-w>": false
  // },

  "explorer.openEditors.visible": 0,
  "editor.tabSize": 2,
  "workbench.iconTheme": "material-icon-theme",
  "editor.rulers": [80],
  "editor.colorDecorators": false,
  "editor.minimap.enabled": false,
  "explorer.confirmDragAndDrop": false,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "explorer.confirmDelete": false,
  "prettier.proseWrap": "always",
  "terminal.integrated.allowMnemonics": true,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.experimentalUseTitleEvent": true,
  "git.enableSmartCommit": true,
  "window.menuBarVisibility": "hidden",
  "window.enableMenuBarMnemonics": false,
  "python.showStartPage": false,
  "workbench.activityBar.visible": false,
  "npm.packageManager": "yarn",
  "eslint.packageManager": "yarn",
  "typescript.preferences.includePackageJsonAutoImports": "on",
  "task.quickOpen.showAll": true,
  "editor.multiCursorModifier": "ctrlCmd",
  "workbench.editor.showTabs": false,
  "window.zoomLevel": 2,
  "editor.suggestSelection": "first",
  "vim.statusBarColorControl": false,
  "git.autofetch": true,
  "projects.configPath": "/home/nf/.local/share/code/vscode_projects.json",
  "vim.highlightedyank.duration": 250,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "[python]": {
    "editor.defaultFormatter": "ms-python.python"
  },
  "python.formatting.provider": "black",
  "python.linting.pylintEnabled": false,
  "python.linting.mypyEnabled": true,
  "vim.easymotion": true,
  "workbench.editor.restoreViewState": false,
  "editor.codeLens": false,
  "telemetry.enableTelemetry": false,
  "telemetry.enableCrashReporter": false,
  "workbench.editorAssociations": [
    {
      "viewType": "jupyter.notebook.ipynb",
      "filenamePattern": "*.ipynb"
    }
  ],
  "terminal.external.linuxExec": "alacritty",
  "[cpp]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  "vscode-neovim.neovimExecutablePaths.linux": "/home/nf/.local/bin/nvim",
  "files.exclude": {
    "**/.ccls-cache": true
  },
}
