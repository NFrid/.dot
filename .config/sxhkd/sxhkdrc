# store PRIMARY selection to CLIPBOARD
super + alt + space
  xsel -p | xsel -b

# close/kill window
# super + {_,ctrl} + c
#   xdo {close,kill}

# dwm alt
super + ctrl + c
  xdo kill

# start a terminal
super + Return
  $TERMINAL

super + ctrl + m
  $TERMINAL

# switch layout
super + space
  xkb-switch -n

# clipboard
super + y
  clipmenu -p clip
  # rofi -modi "clipboard:greenclip print" -show clipboard

