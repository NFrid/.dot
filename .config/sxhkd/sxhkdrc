# alt + Tab
#   useus rofi -show-icons -show windowcd -modi windowcd,window

# browse config files
super + g
  dotbare ls-files --full-name | dmenu -p dot | xargs -I sel $TERM -e nvim $HOME/sel

# fedit configs
super + shift + g
  $TERM -e dotbare fedit

# calculator
super + equal
  useus rofi -show calc -modi calc -no-show-match -no-sort

# note manager (alt to TODO)
super +{_, alt +} slash
  note{_, TODO}

# taskwarrior tui
super + shift + slash
  $TERM -e taskwarrior-tui

# taskell
# super + t
#   tmenu

# unicode symbols picker
super + apostrophe
  unipicker --command "dmenu -l 5 -p unicode" --copy-command "xclip -sel clip"

# emoji picker
super + semicolon
  cat $HOME/.local/share/emoji-data.txt | dmenu -F -p emoji -l 5 | cut -d "	" -f1 | tr -d $'\n' | xclip -sel clip

# rofi emoji picker
super + shift + semicolon
  splatmoji copy

# password manager
super + p
  useus rofi-pass
  # useus pass-rofi --no-notify

# passmenu
super + shift + p
  passmenu -p pass

# brightness control
XF86MonBrightness{Up,Down}
  xbacklight {+,-} 10

# volume control
XF86Audio{Raise,Lower}Volume
  pulsemixer --change-volume {+,-}5 && pkill -RTMIN+10 dwmblocks

# volume toggle mute
XF86AudioMute
  pulsemixer --toggle-mute && pkill -RTMIN+10 dwmblocks

# player control
XF86Audio{Next,Prev,Play}
  playerctl -p playerctld {next,previous,play-pause}

# stop all players
XF86AudioStop
  playerctl --all-players stop

# flameshot
Print
  flameshot gui

# start $BROWSER
super + b
  $BROWSER

# network manager
super + F8
  $TERM -e nmtui

# bluetooth (blueberry)
super + alt + b
  blueberry

