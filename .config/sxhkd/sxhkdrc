# super + d
  # j4-dmenu-desktop --dmenu="dmenu -p desktop"

# dmenu run
super + d
  dmenu_run_history -p run

# dmenu commands
super + r
  dcmd

# rofi desktop
super + shift + d
  rofi -modi drun -show drun

