; %{F}❰%{F-}%{F}❱%{F-}

[module/xwindow]
type = internal/xwindow
; label = %title:0:40:..%
label = %title:0:50:..%

[module/player]
type = custom/script
; format = %{F#50FA7B}❰%{F-}<label>%{F#50FA7B}❱%{F-}
; label = %output:0:40:..%
; label = %output:0:50:..% !!BUT WRAPPER TOOK 16 SYMB SO THATS A DEAL
label = %output:0:66:..%
; exec = getplayerctl "%{F#FF6E67}???"
exec = getplayerctl "%{F#6272A4}no active player"
tail = true
interval = 1

[module/mpd]
type = internal/mpd
format-online = %{F#50FA7B}❰%{F-}<label-song> (<label-time>)%{F#50FA7B}❱%{F-}
label-song = %artist:0:30:..% - %title:0:40:..%
label-time = %elapsed%/%total%
; format-offline = %{F#50FA7B}❰%{F#FF6E67}mpd is offline%{F#50FA7B}❱%{F-}

[module/upd]
type = custom/script
format = %{F#8BE9FD}❰%{F-}<label>%{F#8BE9FD}❱%{F-}
; format = %{F#F4F99D}❰%{F-}<label>%{F#F4F99D}❱%{F-}
label = %output%
exec = updcount
tail = true
interval = 10

[module/task]
type = custom/script
format = %{F#F4F99D}❰%{F-}<label>%{F#F4F99D}❱%{F-}
label = %output%
exec = taskupd
tail = true
interval = 10

[module/sound]
type = internal/pulseaudio
label-volume = %{F#50FA7B}❰%{F-}%percentage%%%{F#50FA7B}❱%{F-}
label-muted = %{F#50FA7B}❰%{F#FF6E67}mut%{F#50FA7B}❱%{F-}

[module/cpu]
type = internal/cpu
label = %{F#FF6E67}❰%{F-}%percentage:2%%%{F#FF6E67}❱%{F-}

[module/mem]
type = internal/memory
label = %{F#BD93F9}❰%{F-}%gb_used:0:4%G%{F#BD93F9}❱%{F-}

[module/temp]
type = internal/temperature
thermal-zone = 4
label = %{F#ffb86c}❰%{F-}%temperature-c%%{F#ffb86c}❱%{F-}
label-warn = %{F#ffb86c}❰%{F#F1FA8C}%temperature-c%%{F#ffb86c}❱%{F-}

[module/layout]
type = internal/xkeyboard
format = <label-layout>
; label-layout = %{F#8BE9FD}❰%{F-}%layout%%{F#8BE9FD}❱%{F-}
; label-layout = %{F#FF79C6}❰%{F-}%layout%%{F#FF79C6}❱%{F-}
label-layout = %{F#BD93F9}❰%{F-}%layout%%{F#BD93F9}❱%{F-}

[module/battery]
type = internal/battery
format-full = %{F#F1FA8C}❰%{F-}<label-full>%{F#F1FA8C}❱%{F-}
format-charging = %{F#50FA7B}❰%{F-}<label-charging>%{F#50FA7B}❱%{F-}
format-discharging = %{F#F1FA8C}❰%{F-}<label-discharging>%{F#F1FA8C}❱%{F-}
label-full = %percentage_raw%
label-charging = %percentage_raw%
label-discharging = %percentage_raw%

[module/time]
type = internal/date
date = %b %d, %a
time = %I:%M:%S %p
