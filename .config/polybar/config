modules-left = bspwm xwindow
; modules-right = player upd task cpu temp mem sound layout time tray-div
modules-center = upd task sound time battery layout
; modules-right = player cpu temp mem tray-div
modules-right = player tray-div

tray-position = right
tray-padding = 0
tray-background = ${colors.background}
tray-offset-x = 0
tray-offset-y = 0
tray-scale = 1.0
tray-maxsize = 23

cursor-click = pointer
cursor-scroll = default


[module/bspwm]
type = internal/bspwm

enable-scroll = false
; enable-click = false
format = <label-state>
# <label-mode>
label-monocle = " %{F#282a36}M "
